<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete things:" Height="150" Width="300" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center" ResizeMode="NoResize">
    <StackPanel Margin="20" HorizontalAlignment="Stretch">
        <TextBlock x:Name="simple_text" Text="" Grid.Column="0" HorizontalAlignment="Center" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="Yes" HorizontalAlignment="Stretch" Width = "80" Height="30" Margin="10,10" Click="yes_click"/>
            <Button Content="No, Sync and Close" HorizontalAlignment="Stretch" Width = "120" Height="30" Margin="10,10" Click="no_click"/>
        </StackPanel>
    </StackPanel>
</Window>